[Unit]
Description=BEAMNode Startup Services (Detector and Scheduler)
# Ensure the service waits until the network is up before starting
After=network.target

[Service]
# Run the service as the standard Raspberry Pi user
User=pi
# Set the working directory to the 'node' script folder
WorkingDirectory=/home/pi/BEAMNode_Prototype1/scripts/node
# Execute the launcher script using its confirmed consolidated path
ExecStart=/usr/bin/env python3 /home/pi/BEAMNode_Prototype1/scripts/node/launcher.py
# IMPORTANT: If the launcher exits (meaning the scheduler exited or startup failed), restart the whole sequence.
Restart=always
# Standard type for a long-running, self-contained process
Type=simple

[Install]
# Enable the service to start automatically during boot
WantedBy=multi-user.target
