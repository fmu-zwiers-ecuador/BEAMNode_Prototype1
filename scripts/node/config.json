{
  "global": {
    "node_id": "beam-node-01",
    "base_dir": "/home/pi/data",
    "ship_dir": "/home/pi/shipping",
    "timezone": "UTC",
    "print_debug": true
  },

  "tsl2591": {
  "enabled": false,
  "script_name": "log_lux_data.py",
  "directory": "tsl2591",
  "file_name": "lux_data.json",
  "frequency": 60,
  "i2c_bus": null,
  "address_hex": null,
  "record_schema": {
    "timestamp": "ISO8601",
    "lux": "float"
  }
},

"aht": {
  "enabled": false,
  "directory": "aht",
  "script_name": "log_ahtx0_paramdata.py",
  "file_name": "aht_env.json",
  "frequency": 60,
  "i2c_bus": null,
  "address_hex": "0x38",
  "record_schema": {
    "timestamp": "ISO8601",
    "temperature_C": "float",
    "humidity_percent": "float"
  }
},


  "bme280": {
    "enabled": false,
    "directory": "bme280",
    "script_name": "log_env_data.py",
    "file_name": "env_data.json",
    "frequency": 60,
    "spi": {
      "sck_pin": "SCK",
      "mosi_pin": "MOSI",
      "miso_pin": "MISO",
      "cs_pin": "D5",
      "baudrate": 100000
    },
    "record_schema": {
      "timestamp": "ISO8601",
      "temperature_C": "float",
      "humidity_percent": "float",
      "pressure_hPa": "float"
    }
  },

  "audio": {
    "enabled": true,
    "directory": "audio",
    "file_prefix": "recording_",
    "duration_sec": 10,
    "frequency": 60,
    "sample_rate": 48000,
    "channels": 1,
    "format": "int16",
    "chunk": 1024,
    "mount_path": null
  },

  "camera": {
    "enabled": false,
    "interface": "CSI",
    "library": "picamera2",
    "expected_model": "imx219",
    "device_id": 0,
    "directory": "camera",
    "file_name": "camera_status.json",
    "record_schema": {
      "timestamp": "ISO8601",
      "status": "string",
      "model": "string",
      "details": "string"
    }
  }
}
